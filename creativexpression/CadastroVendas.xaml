<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="creativexpression.CadastroVendas"
             Title="Cadastro Vendas">
    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25" >
            <Label Text="Digite o ID da transação: "/>
            <Entry x:Name="EntryId_transacao"/>
            <Label Text="Digite o ID do produto: " />
            <Entry x:Name="EntryId_produto"/>
            <Label Text="Digite a quantidade: "/>
            <Entry x:Name="EntryQuantidade"/>
            <Button Text="Salvar" Clicked="Salvar_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>   
</ContentPage>