<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="creativexpression.ListagemProdutos"
             Title="ListagemProdutos">

    <ScrollView>
        <VerticalStackLayout>
            <ListView x:Name="Lista">
                <ListView.ItemTemplate>
                    <DataTemplate >
                        <ViewCell>
                            <Grid Padding="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Image WidthRequest="50" Source="{Binding imagem}" Grid.Row="0" Grid.Column="0" />
                                <Label Text="{Binding id}" Grid.Row="0" Grid.Column="1" />
                                <Label Text="{Binding nome}" Grid.Row="0" Grid.Column="2" />
                                <Label Text="{Binding preco}" Grid.Row="0" Grid.Column="3" />
                                <Label Text="{Binding tamanho}" Grid.Row="0" Grid.Column="4" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>
   
</ContentPage>