<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="creativexpression.CadastroProdutos"
             Title="CadastroProdutos">
    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">

            <Label Text="Digite o nome:" />
            <Entry x:Name="EntryNome" />
            <Label Text="Digite o preco:" />
            <Entry x:Name="EntryPreco" />
            <Label Text="Insira a URL da imagem:" />
            <Entry x:Name="EntryImagem" />
            <Label Text="Digite o tamanho:" />
            <Entry x:Name="EntryTamanho" />
            <Button Text="Salvar" Clicked="Salvar_Clicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>