<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="creativexpression.ListagemUsuarios"
             Title="ListagemUsuarios">
    <ScrollView>
        <VerticalStackLayout>
            <ListView x:Name="Lista">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Label Text="{Binding id}" Grid.Row="0" Grid.Column="0" />
                                <Label Text="{Binding nome}" Grid.Row="0" Grid.Column="1" />
                                <Label Text="{Binding data_nascimento}" Grid.Row="0" Grid.Column="2" />
                                <Label Text="{Binding sexo}" Grid.Row="0" Grid.Column="3" />
                                <Label Text="{Binding cpf}" Grid.Row="0" Grid.Column="4" />
                                <Label Text="{Binding email}" Grid.Row="0" Grid.Column="5" />
                                <Label Text="{Binding telefone}" Grid.Row="0" Grid.Column="6" />
                                <Label Text="{Binding cep}" Grid.Row="0" Grid.Column="7" />

                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>